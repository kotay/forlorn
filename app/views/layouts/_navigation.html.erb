<%= link_to "Sirport.me", root_path, :class => 'brand' %>

<% if user_signed_in? %>
  <ul class='nav pull-left'>
    <%= nav_link "Gentlemen", gentlemen_path %>
    <%= nav_link "Events", events_path %>
  </ul>
<% end %>

<ul class="nav pull-right">
  <% if current_user.try(:admin?) %>
    <li>
      <%#= link_to 'Admin', rails_admin_path %>
    </li>

    <li class='divider-vertical'></li>
  <% end %>

  <% if user_signed_in? %>
    <li id='job-indicator'>
      <a href="/delayed_job">
        <span class="badge"><i class="icon-refresh icon-white"></i> <span class='number'>0</span></span>
      </a>
    </li>
  <% end %>

  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <%=current_user.username%>
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
      <li>
        <% if user_signed_in? %>
          <%= link_to 'Settings', edit_user_registration_path, :tabindex => "-1" %>
        <% else %>
          <%= link_to 'Sign up', new_user_registration_path, :tabindex => "-1" %>
        <% end %>
      </li>

      <li>
        <% if user_signed_in? %>
          <%= link_to 'Logout', destroy_user_session_path, :method => :delete, :tabindex => "-1" %>
        <% else %>
          <%= link_to 'Login', new_user_session_path, :tabindex => "-1" %>
        <% end %>
      </li>
    </ul>
  </li>
</ul>
