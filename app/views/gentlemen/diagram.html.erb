<div class='container'>
  <div class='row'>
    <div class='span12'>
      <div class="page-header">
        <h2>Gentlemen Event Flow</h2>
      </div>
      <div class="btn-group">
        <%= link_to '<i class="icon-chevron-left"></i> Back'.html_safe, gentlemen_path, class: "btn" %>
      </div>

      <div class='digraph'>
        <%
           dot_format_string = "digraph foo {"
           @gentlemen.each.with_index do |gentleman, index|
             dot_format_string += "\"#{gentleman.name}\";"
             gentleman.receivers.each do |receiver|
               dot_format_string += "\"#{gentleman.name}\"->\"#{receiver.name}\";"
             end
           end
           dot_format_string = dot_format_string + "}"
        %>

        <img src="https://chart.googleapis.com/chart?cht=gv&chl=<%= CGI::escape dot_format_string %>" />
      </div>
    </div>
  </div>
</div>
